{
    "build": {
        "devPath": "./ui",
        "distDir": "./ui",
        "withGlobalTauri": true
    },
    "tauri": {
        "allowlist": {
            "window": {
                "show": true,
                "hide": true,
                "close": true
            },
            "dialog": {
                "all": false,
                "message": true,
                "open": true,
                "save": true
            },
            "fs": {
                "all": false,
                "scope": ["$RESOURCE/*"],
                "readFile": true
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "identifier": "charts"
        },
        "windows": [
            {
                "label": "main",
                "title": "charts",
                "minWidth": 800,
                "minHeight": 600,
                "theme": "Dark",
                "alwaysOnTop": true,
                "visible": false
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png"
        }
    }
}