{
    "build": {
        "devPath": "./ui",
        "distDir": "./ui",
        "withGlobalTauri": true
    },
    "tauri": {
        "allowlist": {
            "window": {
                "show": true,
                "hide": true,
                "close": true
            }
        },
        "bundle": {
            "identifier": "charts"
        },
        "windows": [
            {
                "label": "main",
                "title": "charts",
                "visible": true
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png"
        }
    }
}