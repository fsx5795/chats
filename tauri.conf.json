{
    "build": {
        "devPath": "./ui",
        "distDir": "./ui",
        "withGlobalTauri": true
    },
    "tauri": {
        "allowlist": {
            "window": {
                "create": true,
                "show": true,
                "hide": true,
                "close": true
            },
            "dialog": {
                "all": false,
                "message": true,
                "open": true,
                "save": true
            },
            "fs": {
                "all": false,
                "scope": ["$RESOURCE/*"],
                "readFile": true
            },
            "path": {
                "all": true
            },
            "notification": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "charts",
            "windows": {
                "webviewInstallMode": {
                    "type": "offlineInstaller"
                }
            },
            "icon": [
                "icons/icon.png",
                "icons/icon.ico"
            ]
        },
        "windows": [
            {
                "label": "main",
                "title": "charts",
                "minWidth": 800,
                "minHeight": 600,
                "theme": "Dark",
                "alwaysOnTop": true,
                "visible": false
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png"
        }
    }
}